{
    "name": "philippfrenzel/weasy",
    "description": "Yii 2 + Vue.js Basic Project Template",
    "keywords": ["yii2", "framework", "basic", "project template", "vue.js"],
    "type": "project",
    "license": "MIT Clause",
    "support": {
        "issues": "https://github.com/philippfrenzel/weasy/issues?state=open",
        "source": "https://github.com/philippfrenzel/weasy"
    },
    "minimum-stability": "dev",
    "require": {
        "yiisoft/cache": "^3.0@dev",
        "yiisoft/di": "^3.0@dev",
        "yiisoft/log": "^3.0@dev",
        "yiisoft/yii-console": "^3.0@dev",
        "yiisoft/view": "^3.0@dev",
        "yiisoft/yii-web": "^3.0@dev",
        "symfony/var-dumper": "^4.3@dev",
        "vlucas/phpdotenv": "^2.5@dev",
        "yiisoft/yii-dataview": "^3.0@dev",
        "league/commonmark": "^0.19.0@dev",
        "ezyang/htmlpurifier": "~4.6"
    },
    "require-dev": {
        "hiqdev/composer-config-plugin": "^1.0@dev",
        "codeception/base": "^2.2.3",
        "codeception/verify": "~0.3.1",
        "codeception/specify": "~0.4.3"
    },
    "config": {
        "foxy": {
            "enable-packages": {
                "*": true
            }
        },
        "fxp-asset": {
            "enabled": false
        }
    },
    "autoload": {
        "psr-4": {"yii\\app\\": "src"}
    },
    "scripts": {
        "post-install-cmd": [
            "yii\\composer\\Installer::postInstall"
        ],
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject",
            "yii\\composer\\Installer::postInstall",
            "yarn install",
            "yarn dev"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        },
        "config-plugin": {
            "common": "config/common.php",
            "params": "config/params.php",
            "web": "config/web.php",
            "console": "config/console.php",
            "dotenv": ".env"
        },
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/assets": "0777",
                    "yii": "0755"
                }
            ]
        },
        "yii\\composer\\Installer::postInstall": {
            "generateCookieValidationKey": [
                "config/web.php"
            ]
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
